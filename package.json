{
	"name": "ibm-rally-mcp",
	"version": "1.0.4",
	"description": "Servidor MCP lleuger per accedir a les dades de Broadcom Rally",
	"keywords": [
		"mcp",
		"rally",
		"ibm",
		"broadcom",
		"server",
		"api",
		"agile",
		"alm"
	],
	"main": "index.js",
	"bin": {
		"ibm-rally-mcp": "index.js"
	},
	"type": "module",
	"files": [
		"index.js",
		"src/",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"start": "node index.js",
		"test": "node -r dotenv/config node_modules/.bin/jest",
		"test:watch": "node -r dotenv/config node_modules/.bin/jest --watch",
		"test:coverage": "node -r dotenv/config node_modules/.bin/jest --coverage",
		"test:ci": "node -r dotenv/config node_modules/.bin/jest --ci --coverage --watchAll=false --testPathIgnorePatterns=__tests__/integration.test.js --testPathIgnorePatterns=__tests__/src/utils.test.js",
		"lint": "eslint . --fix",
		"lint:check": "eslint . --max-warnings 0",
		"build": "echo \"No build step required for this project\"",
		"prepublish": "npm run lint:check && npm run test:ci",
		"prepublishOnly": "npm run lint:check && npm run test:ci"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/trevSmart/ibm-rally-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/trevSmart/ibm-rally-mcp/issues"
	},
	"homepage": "https://github.com/trevSmart/ibm-rally-mcp",
	"author": "trevSmart",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.0",
		"dotenv": "^16.4.5",
		"ibm-rally-node": "^0.0.15",
		"node-fetch": "^3.3.2",
		"sanitize-html": "^2.17.0",
		"zod": "^4.1.12"
	},
	"engines": {
		"node": ">=22.7.5"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.28.3",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.32.0",
		"@jest/globals": "^30.1.2",
		"babel-jest": "^30.1.2",
		"eslint": "^9.32.0",
		"globals": "^16.3.0",
		"jest": "^30.1.3",
		"typescript-eslint": "^8.38.0"
	}
}
